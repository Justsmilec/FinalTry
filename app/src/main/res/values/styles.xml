<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@drawable/headerbackground</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="android:statusBarColor">#000000</item>



    </style>

    <style name="title">
        <item name="android:textSize">30dp</item>


    </style>

    <style name="AppTheme.PopMe">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>


    <!-- Added by Adem-->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="pageHeader">

        <item name="android:textSize">33dp</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:colorBackground">#00A20A</item>
    </style>

    <style name="loginText">

        <item name="android:textSize">28dp</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">#1C2CA8</item>

    </style>


    <style name="before_click">
        <item name="android:layout_marginBottom">150dp</item>
    </style>

    <style name="after_click">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
